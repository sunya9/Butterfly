<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/list_item_bottom_padding"
  android:paddingTop="@dimen/list_item_top_padding">

  <net.unsweets.butterfly.views.CircleImageView
    android:id="@+id/list_item_avatar"
    android:layout_width="@dimen/list_item_avatar"
    android:layout_height="40dp"
    android:layout_marginLeft="@dimen/list_item_avatar_margin"
    android:layout_marginRight="@dimen/list_item_avatar_margin"
    app:shadow="false"
    app:backgroundColor="@android:color/darker_gray"
    android:src="@drawable/ic_alpha_default_icon"
    android:background="@android:color/darker_gray"
    android:tint="@android:color/white" />

  <TextView
    android:id="@+id/list_item_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/list_item_avatar"
    android:text="TextView"
    android:textSize="@dimen/list_item_title_text_size" />

  <TextView
    android:id="@+id/list_item_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/list_item_title"
    android:layout_toRightOf="@+id/list_item_avatar"
    android:text="TextView"
    android:textSize="@dimen/list_item_body_text_size" />

</RelativeLayout>
